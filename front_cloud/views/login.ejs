<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Connexion</title>

    <%- include('../partials/header.ejs') %>

</head>
<body>
   <%- include('../partials/navbar.ejs') %>
   <%- include('../partials/notifications.ejs') %>


   <div class="container w-50" data-aos="zoom-in">
    <h2 class="text-center mt-5">Formulaire de Connexion</h2>

    <form class="mt-5">
       

        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email address</label>
            <input type="email" class="form-control" id="mail" aria-describedby="emailHelp"
                placeholder="example@test.com" />
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Mot de passe</label>
            <input type="password" class="form-control" id="password" />
            <div id="pswd" class="form-text">
                Never share your password with anyone else.
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-5" id="connectForm">
            Connexion
        </button>
        <%- include('../partials/loader.ejs') %>
    </form>
</div>
    <script>
    $(document).ready(function () {
                        $("#connectForm").click(function (event) {
                            event.preventDefault();

                            $("#loader1").removeClass("visually-hidden");

                            var formData = {
                                mail: $("#mail").val(),
                                password: $("#password").val(),
                            };

                            fetch("http://localhost:4000/auth/login", {
                                method: "POST",
                                headers: {
                                    "Content-Type": "application/json",
                                },
                                body: JSON.stringify(formData),
                            })
                                .then((response) => {
                                    if (!response.ok) {
                                        return response.json().then((data) => {
                                            throw new Error(data.message || "Erreur inconnue");
                                            
                                        });
                                       
                                    }
                                    return response.json();
                                })
                                .then((responseData) => {
                                    console.log("Réponse du serveur :", responseData);
                                    const token = responseData.token;
                                    localStorage.setItem("token", token);

                                    $("#notification_succes")
                                        .removeClass("visually-hidden") 
                                        .fadeIn()
                                        .delay(3000)
                                        .fadeOut(function () {
                                            $(this).addClass("visually-hidden"); 
                                        });

                                        setTimeout(function () {
                                        window.location.href = "/user_home"; 
                                    }, 3000);
                                })
                                .catch((error) => {
                                    console.error("Erreur lors de la requête :", error.message);
                                    $("#notification_fail")
                                        .removeClass("visually-hidden") 
                                        .fadeIn()
                                        .delay(3000)
                                        .fadeOut(function () {
                                            $(this).addClass("visually-hidden"); 
                                    });
                                    
                                })
                                .finally(() => {
                                    $("#loader1").addClass("visually-hidden");
                                });
                        });
                    });

    </script>

   <%- include('../partials/footer.ejs') %>
   <%- include('../asset/js/logout.ejs') %>


</body>
</html>